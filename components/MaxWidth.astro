---
export interface Props extends astroHTML.JSX.HTMLAttributes {
    as?: any
    small?: boolean
}

const { as: Component = 'section', small = false, class: className = '', ...props } = Astro.props as Props
---

<Component
    class:list={[
        className,
        small ? 'max-w-4xl' : 'max-w-7xl',
        'mx-auto',
        'px-4',
        'sm:px-6',
        'lg:px-8'
    ]}
    {...props}
>
    <slot />
</Component>
